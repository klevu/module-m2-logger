<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <virtualType name="Klevu\Logger\Block\Adminhtml\Config\Developer\LogDownload"
                 type="Klevu\Configuration\Block\Adminhtml\System\Config\Button">
        <arguments>
            <argument name="viewModel" xsi:type="object">Klevu\Logger\ViewModel\Config\Button\LogDownload</argument>
        </arguments>
    </virtualType>

    <virtualType name="Klevu\Logger\Block\Adminhtml\Config\Developer\LogArchive"
                 type="Klevu\Configuration\Block\Adminhtml\System\Config\Button">
        <arguments>
            <argument name="viewModel" xsi:type="object">Klevu\Logger\ViewModel\Config\Button\LogArchive</argument>
        </arguments>
    </virtualType>

    <virtualType name="Klevu\Logger\Block\Adminhtml\Config\Developer\LogClear"
                 type="Klevu\Configuration\Block\Adminhtml\System\Config\Button">
        <arguments>
            <argument name="viewModel" xsi:type="object">Klevu\Logger\ViewModel\Config\Button\LogClear</argument>
        </arguments>
    </virtualType>

    <virtualType name="Klevu\Configuration\ViewModel\Config\Information\KnowledgeBase"
                 type="Klevu\Configuration\ViewModel\Config\Information\ArticleList">
        <arguments>
            <argument name="articles" xsi:type="array">
                <item name="documentation" xsi:type="array">
                    <item name="logging" xsi:type="array">
                        <item name="link" xsi:type="string"><![CDATA[https://docs.klevu.com/klevu-magento-v4/logging]]></item>
                        <item name="order" xsi:type="number">400</item>
                        <item name="title" xsi:type="string">Logging</item>
                    </item>
                </item>
            </argument>
        </arguments>
    </virtualType>
</config>
